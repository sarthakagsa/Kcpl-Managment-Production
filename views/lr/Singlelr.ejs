    </div>
    <button class="btn btn-secondary container mb-2" id="updatebtn">Update</button>
    <button class="btn btn-danger container mb-2" onclick="confirmation();" id="deletetbh">Delete Repair</button>
  </div>

  <script>
    $("#logoutbtn").click(function() {
      const token = $('#logoutbtn').data("token")
      $.ajax({
          type: "POST",
          url: '/users/logout/'+token,
          contentType: "application/json",
          processData: false,
      }).done(function (data) {
          window.open('/login','_self',false)
        }).fail(function ( jqXHR, textStatus, errorThrown) {
            const x = document.getElementById("errorbox");
            document.getElementById("errorbox").innerHTML = ""+jqXHR.responseText;
            if (x.style.display === "none") {
              x.style.display = "block";
            }
          });
    })
    $("#submitbtn").click(function() {
        const lrid = $('#lroption').find(":selected").data("lrid");
        const token = $('#logoutbtn').data("token")
        $.ajax({
          type: "GET",
          url: '/lr/'+lrid+'/'+token,
          contentType: "application/json",
          processData: false
      }).done(function (data) {
          const lr = data
          $('#date').val(lr.date)
          $('#origin').val(lr.origin)
          $('#destination').val(lr.destination)
          $('#partyname').val(lr.partyname)
          $('#invoice').val(lr.invoice)
          $('#boxes').val(lr.boxes)
          $('#loadingcharges').val(lr.loadingcharges)
          $('#unloadingcharges').val(lr.unloadingcharges)
          $('#tolltax').val(lr.tolltax)
          $('#snt').val(lr.snt)
          $('#saletax').val(lr.saletax)
          $('#openingkm').val(lr.openingkm)
          $('#closingkm').val(lr.closingkm)
          $('#billed').prop('checked',lr.billed)
            const x = document.getElementById("lrdetails");
            if (x.style.display === "none") {
              x.style.display = "block";
            }
        }).fail(function ( jqXHR, textStatus, errorThrown) {
            const x = document.getElementById("errorbox");
            document.getElementById("errorbox").innerHTML = "Desired option is not appropriate";
            if (x.style.display === "none") {
              x.style.display = "block";
            }
          });
    })

    searchBox = document.querySelector("#searchBox");
    lroption = document.querySelector("#lroption");
    var when = "keyup";
    searchBox.addEventListener("keyup", function (e) {
    var text = e.target.value; //searchBox value
    var options = lroption.options; //select options
    for (var i = 0; i < options.length; i++) {
        var option = options[i]; //current option
        var optionText = option.text; //option text ("Somalia")
        var lowerOptionText = optionText.toLowerCase(); //option text lowercased for case insensitive testing
        var lowerText = text.toLowerCase(); //searchBox value lowercased for case insensitive testing
        var regex = new RegExp("^" + text, "i"); //regExp, explained in post
        var match = optionText.match(regex); //test if regExp is true
        var contains = lowerOptionText.indexOf(lowerText) != -1; //test if searchBox value is contained by the option text
        if (match || contains) { //if one or the other goes through
            option.selected = true; //select that option
            return; //prevent other code inside this event from executing
        }
        searchBox.selectedIndex = 0; //if nothing matches it selects the default option
    }
});

$("#updatebtn").click(function() {
      const lrid = $('#lroption').find(":selected").data("lrid");
      const token = $('#logoutbtn').data("token")
      const date = document.getElementById('date').value
      const origin = document.getElementById('origin').value
      const destination = document.getElementById('destination').value
      const partyname = document.getElementById('partyname').value
      const invoice = document.getElementById('invoice').value
      const boxes = document.getElementById('boxes').value
      const loadingcharges = document.getElementById('loadingcharges').value
      const unloadingcharges = document.getElementById('unloadingcharges').value
      const tolltax = document.getElementById('tolltax').value
      const snt = document.getElementById('snt').value
      const saletax = document.getElementById('saletax').value
      const openingkm = document.getElementById('openingkm').value
      const closingkm = document.getElementById('closingkm').value
      const billed = $('#billed').prop('checked')
      $.ajax({
          type: "PATCH",
          url: '/lr/update/'+lrid+'/'+token,
          contentType: "application/json",
          processData: false,
          data:  JSON.stringify({date : date,origin : origin, destination : destination, partyname : partyname,invoice : invoice,boxes : boxes, loadingcharges : loadingcharges, unloadingcharges : unloadingcharges,tolltax : tolltax,snt : snt, saletax : saletax,openingkm : openingkm,closingkm : closingkm,billed : billed})
      }).done(function (data) {
          window.open('/lr/view/single/'+data.token,'_self',false)
        }).fail(function ( jqXHR, textStatus, errorThrown) {
            const x = document.getElementById("errorbox");
            document.getElementById("errorbox").innerHTML = ""+jqXHR.responseText;
            if (x.style.display === "none") {
              x.style.display = "block";
            }
          });
    })

    function confirmation(){
    var result = confirm("Are you sure you want to delete?");
    if(result){
      const lrid = $('#lroption').find(":selected").data("lrid");
      const token = $('#logoutbtn').data("token")
      $.ajax({
          type: "DELETE",
          url: '/lr/'+lrid+'/'+token,
          contentType: "application/json",
          processData: false
      }).done(function (data) {
        window.open('/lr/view/single/'+data.token,'_self',false)
        }).fail(function ( jqXHR, textStatus, errorThrown) {
            const x = document.getElementById("errorbox");
            document.getElementById("errorbox").innerHTML = ""+jqXHR.responseText;
            if (x.style.display === "none") {
              x.style.display = "block";
            }
          });
    }
}

      function forceKeyPressUppercase(e)
        {
          var charInput = e.keyCode;
          if((charInput >= 97) && (charInput <= 122)) { // lowercase
            if(!e.ctrlKey && !e.metaKey && !e.altKey) { // no modifier key
              var newChar = charInput - 32;
              var start = e.target.selectionStart;
              var end = e.target.selectionEnd;
              e.target.value = e.target.value.substring(0, start) + String.fromCharCode(newChar) + e.target.value.substring(end);
              e.target.setSelectionRange(start+1, start+1);
              e.preventDefault();
            }
          }
      }

  document.getElementById("origin").addEventListener("keypress", forceKeyPressUppercase, false);
  document.getElementById("destination").addEventListener("keypress", forceKeyPressUppercase, false);
  document.getElementById("partyname").addEventListener("keypress", forceKeyPressUppercase, false);
  document.getElementById("invoice").addEventListener("keypress", forceKeyPressUppercase, false);
  </script>

